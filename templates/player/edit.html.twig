{% extends 'base.html.twig' %}

{% block main_content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 my-3 mx-1 py-3 px-3">
                <div class="main-content__title">
                    <h1 class="h2">
                        {% if player is defined %}
                            Edit {{ player.name }} information
                        {% else %}
                            Add a player
                        {% endif %}
                    </h1>
                </div>

                <div>
                    {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.coords) }}

                    <div class="text-right">
                        <button type="submit" class="btn btn-success">
                            Save
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
